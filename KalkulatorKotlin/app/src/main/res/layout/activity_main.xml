<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/bil1"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:layout_marginTop="136dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bil2"
        android:layout_width="200dp"
        android:layout_height="47dp"
        app:layout_constraintEnd_toEndOf="@+id/bil1"
        app:layout_constraintStart_toStartOf="@+id/bil1"
        app:layout_constraintTop_toBottomOf="@+id/bil1" />

    <Button
        android:id="@+id/jumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlahkan"
        app:layout_constraintEnd_toEndOf="@+id/bil2"
        app:layout_constraintStart_toStartOf="@+id/bil2"
        app:layout_constraintTop_toBottomOf="@+id/bil2">

    </Button>

    <Button
        android:id="@+id/kurang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kurangi"
        app:layout_constraintEnd_toEndOf="@+id/jumlah"
        app:layout_constraintStart_toStartOf="@+id/jumlah"
        app:layout_constraintTop_toBottomOf="@+id/jumlah">

    </Button>

    <Button
        android:id="@+id/kali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalikan"
        app:layout_constraintEnd_toEndOf="@+id/kurang"
        app:layout_constraintStart_toStartOf="@+id/kurang"
        app:layout_constraintTop_toBottomOf="@+id/kurang">

    </Button>

    <Button
        android:id="@+id/bagi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bagi"
        app:layout_constraintEnd_toEndOf="@+id/kali"
        app:layout_constraintStart_toStartOf="@+id/kali"
        app:layout_constraintTop_toBottomOf="@+id/kali">

    </Button>

    <TextView
        android:id="@+id/hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bagi"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/bagi"
        app:layout_constraintTop_toBottomOf="@+id/bagi"
        app:layout_constraintVertical_bias="0.262" />

</androidx.constraintlayout.widget.ConstraintLayout>